<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule.create.ScheduleDrinkFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/selectDrinkSpinner"
            android:layout_width="@dimen/create_schedule_area_width"
            android:layout_height="@dimen/create_schedule_area_height"
            android:background="@drawable/rounded_outline"
            android:backgroundTint="@color/primary_grey"
            android:contentDescription="@string/select_drink_prompt"
            android:prompt="@string/select_drink_prompt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.447"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.346" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/create_schedule_select_drink"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text"
            app:layout_constraintBottom_toTopOf="@+id/selectDrinkSpinner"
            app:layout_constraintEnd_toEndOf="@+id/selectDrinkSpinner"
            app:layout_constraintStart_toStartOf="@+id/selectDrinkSpinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.635" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>